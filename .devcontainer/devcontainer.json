{
  "name": "Janitor Dev Container",

  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },

    "ghcr.io/devcontainers-extra/features/direnv:1": {},

    "ghcr.io/devcontainers/features/aws-cli:1": {},

    "ghcr.io/devcontainers-extra/features/aws-cdk:2": {},

    "ghcr.io/devcontainers-extra/features/quarkus-sdkman:2": {
      "jdkDistro": "graalce"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/npm:1": {},
    "ghcr.io/devcontainers-contrib/features/nuxt:1": {}
  },

  "remoteUser": "vscode",

  "forwardPorts": [8080, 3000],

  "postCreateCommand": "./.devcontainer/post-create.sh",

  "customizations": {
    "codespaces": {
      "vscode": {
        "settings": {},
        "extensions": [
          "jetpack-io.devbox",
          "ms-azuretools.vscode-docker",
          "github.copilot",
          "github.copilot-chat",
          "vscjava.vscode-java-pack",
          "vscjava.vscode-java-debug",
          "vscjava.vscode-java-dependency",
          "vscjava.vscode-java-test",
          "vscjava.vscode-maven",
          "redhat.java"
        ]
      }
    }
  }
}
